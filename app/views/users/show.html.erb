<h1><%= @user.name if @user.name %></h1>
<h4><%= link_to 'Create new post', new_post_path(user_id: @user.id) %></h4>

<h3> Collections</h3>
<% @user.collections.each do |collection| %>
	<p><%= collection.name %></p>
<% end %>
<h3> Posts</h3>
<% @user.posts.each do |post| %>
	<p><%= post.body %> <%= link_to 'Edit', edit_post_path(post) %> <%= link_to 'Delete', post, data: { confirm: 'Are you sure you want to delete this post?' } %></p>
<% end %>
