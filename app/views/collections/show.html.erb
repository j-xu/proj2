<h1><%= @collection.name %></h1>

<%= paginate @collections %>

<p><%= link_to 'Edit Collection', edit_collection_path(@collection.id) %>
	<%= link_to 'Delete Collection', @collection, data: { confirm: 'Are you sure you want to delete this collection? You will lose all posts in this collection.', method: :delete } %></p>


<% @collection.posts.each do |post| %>
	<p><%= post.body %> <%= link_to 'Edit', edit_post_path(post) %> <%= link_to 'Delete', post, data: { confirm: 'Are you sure you want to delete this post?' } %> <%= link_to 'Switch', collections_path(user_id: @user.id, post_id: post.id) %></p>
<% end %>